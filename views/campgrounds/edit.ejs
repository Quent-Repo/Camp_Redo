<% layout('layouts/page')%>
<div class="col-6 offset-3 mb-3">
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="validated-form">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control mt-3" id="title" name="campground[title]" value="<%=campground.title%>" required>
        </div>
        <div class="mt-3">
            <label for="location" class="form-label mt-3">Location</label>
            <input type="text" class="form-control " id="location" name="campground[location]" value="<%=campground.location%>" required>
        </div>
        <div class="mt-3">
            <label for="location" class="form-label mt-3">Image</label>
            <input type="text" class="form-control " id="location" name="campground[Image]" value="<%=campground.Description%>" required>
        </div>
        <div class="mt-3">
            <label for="location" class="form-label mt-3">Description</label>
            <textarea type="text" class="form-control" id="description" name="campground[description]" required></textarea>
        </div>
        <div class="mt-3">
            <label for="location" class="form-label mt-3">price</label>
            <input type="text" class="form-control " id="location" name="campground[price]" value="<%=campground.price%>" required>
        </div>
        
        <button class="btn btn-success mt-3">submit</button>
        <button class="btn btn-danger mt-3"><a href="/campgrounds/<%=campground._id%>">Back</a></button>
    </form>
</div>
